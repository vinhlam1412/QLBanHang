@model IEnumerable<EShop.Models.ImportTicket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-top : 10%; margin-left:5%;">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImportDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalMoney)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImportDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMoney)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TicketId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TicketId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TicketId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>