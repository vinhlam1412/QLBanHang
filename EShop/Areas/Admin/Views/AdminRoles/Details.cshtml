@model EShop.Models.Role
@{
    ViewData["Title"] = "Chi tiết quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card" style="border-radius: 1rem; margin-top:10%;margin-left:10%; margin-right:10%">
    <div class="card-header">
        <h3 class="card-title">Thông tin quyền</h3>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0" style="height: 300px;">
            <table class="table table-head-fixed text-nowrap">
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td><span class="tag tag-success">@Model.RoleId</span></td>
                    </tr>
                    <tr>
                        <td>Tên Quyền</td>
                        <td><span class="tag tag-success">@Model.RoleName</span></td>
                    </tr>
                    <tr>
                        <td>Mô Tả</td>
                        <td><span class="tag tag-success">@Model.Descriptions</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div>
        <a class="btn btn-adn fas fa-arrow-alt-circle-left btn-secondary" asp-action="Index"><span style="margin-left:10px;">Back to List</span></a> |
        <a class="btn btn-adn fa fa-edit btn-primary" asp-action="Edit" asp-route-id="@Model.RoleId"><span style="margin-left:10px;">Edit</span></a>

    </div>
</div>
