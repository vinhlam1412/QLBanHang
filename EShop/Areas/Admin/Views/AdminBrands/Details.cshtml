@model EShop.Models.Brand

@{
    ViewData["Title"] = "Chi tiết nhãn hàng #" +Model.BrandId;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                @*<div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                        <img src="~/images/categoties/@Model.ThumbImg" alt="@Model.Title">
                    </div>*@
                <div class="m-l-15">
                    <h4 class="m-b-0">@Model.BrandName</h4>
                    <p class="text-muted m-b-0">ID: @Model.BrandId</p>
                </div>
            </div>
            <div class="m-b-15">
                <div class="form-group">
                    <a asp-controller="AdminBrands" asp-action="Edit" asp-route-id="@Model.BrandId" class="btn btn-primary">
                        <i class="anticon anticon-edit"></i>
                        <span>Sửa</span>
                    </a>
                </div>
                <div>
                    <a asp-action="Index" type="button" class="btn btn-dark">Trở về</a>
                </div>
            </div>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrandName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BrandName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Logo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Logo)
            </dd>
        </dl>
    </div>
</div>
