@using EShop.Models;
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-magenta">
                            <i class="anticon anticon-dollar"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@ViewBag.mRevenue VNĐ</h2>
                            <p class="m-b-0 text-muted">Lợi nhuận</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-cyan">
                                <i class="anticon anticon-shopping"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0">@ViewBag.sumProduct</h2>
                                <p class="m-b-0 text-muted">Tổng số sản phẩm</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-gold">
                            <i class="anticon anticon-profile"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@ViewBag.sumOrder</h2>
                            <p class="m-b-0 text-muted">Tổng số đơn đặt</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-purple">
                                <i class="anticon anticon-user"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0">@ViewBag.sumCus</h2>
                                <p class="m-b-0 text-muted">Tổng khách hàng</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-lime">
                                <i class="anticon anticon-shop"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0">@ViewBag.lstUnapprovedOrder</h2>
                                <p class="m-b-0 text-muted">Đơn hàng chưa duyệt</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-icon avatar-lg avatar-gold">
                            <i class="anticon anticon-bank"></i>
                        </div>
                        <div class="m-l-15">
                            <h2 class="m-b-0">@ViewBag.yRevenue VNĐ</h2>
                            <p class="m-b-0 text-muted">Doanh thu năm nay</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center">
                        <a asp-area="Admin" asp-controller="AdminProducts" asp-action="BestSeller">
                            <div class="avatar avatar-icon avatar-lg avatar-red">
                                <i class="anticon anticon-trophy"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0">@ViewBag.bSellProduct</h2>
                                <p class="m-b-0 text-muted">Sản phẩm bán chạy</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>