<div class="header">
    <div class="logo logo-dark">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
            <img src="~/_AdminAssets/images/logo/logo.png" width="230" height="67" alt="Logo">
            @*<img class="logo-fold" src="~/_AdminAssets/images/logo/logo-fold.png" alt="Logo">*@
        </a>
    </div>
    <div class="logo logo-white">
        <a href="index.html">
            <img src="~/_AdminAssets/images/logo/logo-white.png" alt="Logo">
            <img class="logo-fold" src="~/_AdminAssets/images/logo/logo-fold-white.png" alt="Logo">
        </a>
    </div>
    <div class="nav-wrap">
        <ul class="nav-left">
            <li class="desktop-toggle">
                <a href="javascript:void(0);">
                    <i class="anticon"></i>
                </a>
            </li>
            <li class="mobile-toggle">
                <a href="javascript:void(0);">
                    <i class="anticon"></i>
                </a>
            </li>
        </ul>
        <ul class="nav-right">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li class="dropdown dropdown-animated scale-left">
                    <div class="pointer" data-toggle="dropdown">
                        <div class="avatar avatar-image  m-h-10 m-r-15">
                            <img src="~/_AdminAssets/images/avatars/Admin.bmp" alt="Admin">
                        </div>
                    </div>
                    <div class="p-b-15 p-t-20 dropdown-menu pop-profile">
                        <div class="p-h-20 p-b-15 m-b-10 border-bottom">
                            <div class="d-flex m-r-50">
                                <div class="avatar avatar-lg avatar-image">
                                    <img src="~/_AdminAssets/images/avatars/Admin.bmp" alt="Admin">
                                </div>
                                <div class="m-l-10">
                                    <p class="m-b-0 text-dark font-weight-semibold">@User.Identity.Name</p>
                                    <p class="m-b-0 opacity-07">Admin</p>
                                </div>
                            </div>
                        </div>
                        <a asp-area="Admin" asp-controller="Login" asp-action="Logout" class="dropdown-item d-block p-h-15 p-v-10">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="anticon opacity-04 font-size-16 anticon-logout"></i>
                                    <span class="m-l-10">Logout</span>
                                </div>
                                <i class="anticon font-size-10 anticon-right"></i>
                            </div>
                        </a>
                    </div>
                </li>
                <li>
                    <a href="/Home/Index" data-toggle="modal" data-target="#quick-view">
                        <i class="anticon anticon-appstore"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="dropdown dropdown-animated scale-left">
                    <div class="pointer" data-toggle="dropdown">
                        <div class="avatar avatar-image  m-h-10 m-r-15">
                            <img src="~/_AdminAssets/images/avatars/Staff.bmp" alt="Staff">
                        </div>
                    </div>
                    <div class="p-b-15 p-t-20 dropdown-menu pop-profile">
                        <div class="p-h-20 p-b-15 m-b-10 border-bottom">
                            <div class="d-flex m-r-50">
                                <div class="avatar avatar-lg avatar-image">
                                    <img src="~/_AdminAssets/images/avatars/Staff.bmp" alt="">
                                </div>
                                <div class="m-l-10">
                                    <p class="m-b-0 text-dark font-weight-semibold">@User.Identity.Name</p>
                                    <p class="m-b-0 opacity-07">Staff</p>
                                </div>
                            </div>
                        </div>
                        <a asp-area="Admin" asp-controller="Login" asp-action="Logout" class="dropdown-item d-block p-h-15 p-v-10">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="anticon opacity-04 font-size-16 anticon-logout"></i>
                                    <span class="m-l-10">Logout</span>
                                </div>
                                <i class="anticon font-size-10 anticon-right"></i>
                            </div>
                        </a>
                    </div>
                </li>
                <li>
                    <a href="javascript:void(0);" data-toggle="modal" data-target="#quick-view">
                        <i class="anticon anticon-appstore"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>