@model EShop.Models.Customer

@{
    ViewData["Title"] = "Thông tin khách hàng #" + Model.CustommerId;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post" class="emp-profile col-10">
        <div class="row">
            <div class="col-md-3">
                <div class="profile-img">
                    <img src="~/images/User/@Model.Avatar" alt="" />
                    @*<div class="file btn btn-lg btn-primary">
                            Change Photo
                            <input type="file" name="file" />
                        </div>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.FullName
                    </h5>
                    <h6>
                        @Model.Mail
                    </h6>
                    <p class="proile-rating">@Model.Province</p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                               aria-controls="home" aria-selected="true">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                               aria-controls="profile" aria-selected="false">Timeline</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3">
                <div style="margin-bottom:10px;">
                    <span>
                        <a asp-action="Edit" asp-route-id="@Model.CustommerId" class="btn btn-primary btn-block btn-sm profile-edit-btn">
                            <i class="fas fa-edit" style="margin-right:5px;"></i>Edit Profile
                        </a>
                    </span>
                </div>
                <div style="margin-bottom:10px;">
                    <span>
                        <a asp-action="Index" class="btn btn-secondary btn-block btn-sm profile-edit-btn">
                            <i class="fas fa-arrow-circle-left" style="margin-right:5px;"></i>Back to list
                        </a>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-7">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Customer Id</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CustommerId</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ngày sinh nhật</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.BirthDay</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Số điện thoại</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Phone</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Trạng thái</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.IsActived</p>
                            </div>
                        </div>
                        @*<div class="row">
                                <div class="col-md-6">
                                    <label>Cart ID</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.CartId</p>
                                </div>
                            </div>*@
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Quận/Huyện</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.District</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Phường/Xã</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Ward</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Địa chỉ</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Address</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ngày tạo</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CreateDate</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Lần cuối đăng nhập</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.LastLogin</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Styles {
    <style>
        .profile-head .nav-tabs {
            margin-bottom: 5%;
        }

        .profile-img {
            text-align: center;
        }

            .profile-img img {
                /*width: 100%;
            height: 100%;*/
                max-height: 188px;
                max-width: 125px;
                border-radius: 10px;
            }

            .profile-img .file {
                position: relative;
                overflow: hidden;
                margin-top: -20%;
                margin-left: 8%;
                margin-bottom: 30px;
                width: 70%;
                border: none;
                border-radius: 10px;
                font-size: 15px;
                background: #212529b8;
            }

                .profile-img .file input {
                    position: absolute;
                    opacity: 0;
                    right: 0;
                    top: 0;
                }

        .emp-profile {
            color: #47284F;
            padding: 3%;
            margin-top: 10%;
            margin-bottom: 3%;
            margin-left: 10%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-edit-btn {
            align-items: stretch;
            border: none;
            border-radius: 1.5rem;
            width: 70%;
            padding: 2%;
            font-weight: 600;
            color: #6c757d;
            cursor: pointer;
        }
    </style>
}