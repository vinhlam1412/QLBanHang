@model EShop.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục #" + Model.CateId;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                @*<div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                    <img src="~/images/categoties/@Model.ThumbImg" alt="@Model.Title">
                </div>*@
                <div class="m-l-15">
                    <h4 class="m-b-0">@Model.CategoryName</h4>
                    <p class="text-muted m-b-0">ID: @Model.CateId</p>
                </div>
            </div>
            <div class="m-b-15">
                <div class="form-group">
                    <a asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@Model.CateId" class="btn btn-primary">
                        <i class="anticon anticon-edit"></i>
                        <span>Sửa</span>
                    </a>
                </div>
                <div>
                    <a asp-action="Index" type="button" class="btn btn-dark">Back to List</a>
                </div>
            </div>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descriptions)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Descriptions)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Levels)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Levels)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ordering)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ordering)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsPublished)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsPublished)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ThumbImg)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThumbImg)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Alias)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Alias)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cover)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cover)
            </dd>
        </dl>
    </div>
</div>

